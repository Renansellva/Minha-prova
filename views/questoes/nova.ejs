        }

        .btn-remove-opcao {
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.8em;
            transition: transform 0.2s;
        }

        .btn-remove-opcao:hover {
            transform: translateY(-1px);
        }

        .form-actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
            padding-top: 30px;
            border-top: 2px solid #e1e5e9;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            font-weight: 600;
            transition: transform 0.2s;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .preview-section {
            margin-top: 30px;
            padding-top: 30px;
            border-top: 2px solid #e1e5e9;
        }

        .preview-container {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border: 1px solid #e1e5e9;
        }

        .preview-title {
            font-size: 1.2em;
            margin-bottom: 15px;
            color: #333;
        }

        .preview-questao {
            background: white;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #e1e5e9;
        }

        .preview-enunciado {
            font-weight: 500;
            margin-bottom: 15px;
            color: #333;
        }

        .preview-opcoes {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .preview-opcoes li {
            padding: 8px 0;
            color: #666;
        }

        .preview-opcoes .correta {
            background: #d4edda;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: 600;
            color: #155724;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <div class="logo">üìö Minha Prova</div>
            <div>
                <span>üëã Ol√°, <%= professor.nome %></span>
                <a href="/logout" style="color: #dc3545; text-decoration: none; margin-left: 15px;">Sair</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="page-header">
            <div class="breadcrumb">
                <a href="/dashboard" class="breadcrumb-link">üè† Dashboard</a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <a href="/questoes" class="breadcrumb-link">‚ùì Quest√µes</a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <span class="breadcrumb-current">‚ùì Nova Quest√£o</span>
            </div>
            <h1 class="page-title">‚ùì Nova Quest√£o</h1>
            <div class="header-actions">
                <a href="/dashboard" class="btn btn-secondary">üè† Dashboard</a>
                <a href="/questoes" class="btn btn-secondary">‚Üê Voltar √†s Quest√µes</a>
            </div>
        </div>

        <div class="form-container">
            <form id="nova-questao-form">
                <div class="form-group">
                    <label for="enunciado">Enunciado da Quest√£o:</label>
                    <textarea id="enunciado" name="enunciado" required placeholder="Digite o enunciado da quest√£o aqui..."></textarea>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="area">√Årea/Disciplina:</label>
                        <select id="area" name="area" required>
                            <option value="">Selecione uma √°rea</option>
                            <option value="Matem√°tica">Matem√°tica</option>
                            <option value="Portugu√™s">Portugu√™s</option>
                            <option value="Hist√≥ria">Hist√≥ria</option>
                            <option value="Geografia">Geografia</option>
                            <option value="Ci√™ncias">Ci√™ncias</option>
                            <option value="Qu√≠mica">Qu√≠mica</option>
                            <option value="F√≠sica">F√≠sica</option>
                            <option value="Biologia">Biologia</option>
                            <option value="Ingl√™s">Ingl√™s</option>
                            <option value="Espanhol">Espanhol</option>
                            <option value="Filosofia">Filosofia</option>
                            <option value="Sociologia">Sociologia</option>
                            <option value="Artes">Artes</option>
                            <option value="Educa√ß√£o F√≠sica">Educa√ß√£o F√≠sica</option>
                            <option value="Outras">Outras</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nivelDificuldade">N√≠vel de Dificuldade:</label>
                        <select id="nivelDificuldade" name="nivelDificuldade" required>
                            <option value="facil">F√°cil</option>
                            <option value="medio" selected>M√©dio</option>
                            <option value="dificil">Dif√≠cil</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Op√ß√µes de Resposta:</label>
                    <div class="opcoes-container" id="opcoes-container">
                        <div class="opcao-item">
                            <input type="radio" name="respostaCorreta" value="0" required>
                            <span class="opcao-label">A)</span>
                            <input type="text" placeholder="Op√ß√£o A" required class="opcao-input">
                            <button type="button" class="btn-remove-opcao" onclick="removerOpcao(this)" style="display: none;">üóëÔ∏è</button>
                        </div>
                        <div class="opcao-item">
                            <input type="radio" name="respostaCorreta" value="1" required>
                            <span class="opcao-label">B)</span>
                            <input type="text" placeholder="Op√ß√£o B" required class="opcao-input">
                            <button type="button" class="btn-remove-opcao" onclick="removerOpcao(this)" style="display: none;">üóëÔ∏è</button>
                        </div>
                        <div class="opcao-item">
                            <input type="radio" name="respostaCorreta" value="2" required>
                            <span class="opcao-label">C)</span>
                            <input type="text" placeholder="Op√ß√£o C" required class="opcao-input">
                            <button type="button" class="btn-remove-opcao" onclick="removerOpcao(this)" style="display: none;">üóëÔ∏è</button>
                        </div>
                        <div class="opcao-item">
                            <input type="radio" name="respostaCorreta" value="3" required>
                            <span class="opcao-label">D)</span>
                            <input type="text" placeholder="Op√ß√£o D" required class="opcao-input">
                            <button type="button" class="btn-remove-opcao" onclick="removerOpcao(this)" style="display: none;">üóëÔ∏è</button>
                        </div>
                    </div>
                    <button type="button" class="btn-add-opcao" onclick="adicionarOpcao()">‚ûï Adicionar Op√ß√£o</button>
                    <p style="margin-top: 10px; color: #666; font-size: 0.9em;">Marque a op√ß√£o correta com o bot√£o de r√°dio</p>
                </div>

                <div class="form-actions">
                    <a href="/questoes" class="btn btn-secondary">Cancelar</a>
                    <button type="button" class="btn btn-secondary" onclick="previewQuestao()">üëÅÔ∏è Visualizar</button>
                    <button type="submit" class="btn btn-primary">üíæ Salvar Quest√£o</button>
                </div>
            </form>

            <div class="preview-section" id="preview-section" style="display: none;">
                <h3 class="preview-title">üìã Pr√©-visualiza√ß√£o da Quest√£o</h3>
                <div class="preview-container">
                    <div class="preview-questao" id="preview-questao">
                        <!-- Preview ser√° inserido aqui -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let totalOpcoes = 4;

        function adicionarOpcao() {
            const container = document.getElementById('opcoes-container');
            const letra = String.fromCharCode(65 + totalOpcoes);
            
            const novaOpcaoDiv = document.createElement('div');
            novaOpcaoDiv.className = 'opcao-item';
            novaOpcaoDiv.innerHTML = `
                <input type="radio" name="respostaCorreta" value="${totalOpcoes}" required>
                <span class="opcao-label">${letra})</span>
                <input type="text" placeholder="Op√ß√£o ${letra}" required class="opcao-input">
                <button type="button" class="btn-remove-opcao" onclick="removerOpcao(this)">üóëÔ∏è</button>
            `;
            
            container.appendChild(novaOpcaoDiv);
            totalOpcoes++;
            
            // Mostrar bot√µes de remover se tiver mais de 2 op√ß√µes
            if (totalOpcoes > 2) {
                document.querySelectorAll('.btn-remove-opcao').forEach(btn => {
                    btn.style.display = 'inline-block';
                });
            }
        }

        function removerOpcao(button) {
            const opcaoItem = button.closest('.opcao-item');
            const container = document.getElementById('opcoes-container');
            const opcoesRestantes = container.querySelectorAll('.opcao-item');
            
            // N√£o permite remover se tiver apenas 2 op√ß√µes
            if (opcoesRestantes.length <= 2) {
                alert('√â necess√°rio ter pelo menos 2 op√ß√µes de resposta.');
                return;
            }
            
            opcaoItem.remove();
            totalOpcoes--;
            
            // Renumera as op√ß√µes restantes
            renumerarOpcoes();
            
            // Esconde bot√µes de remover se tiver apenas 2 op√ß√µes
            if (container.querySelectorAll('.opcao-item').length <= 2) {
                document.querySelectorAll('.btn-remove-opcao').forEach(btn => {
                    btn.style.display = 'none';
                });
            }
        }

        function renumerarOpcoes() {
            const container = document.getElementById('opcoes-container');
            const opcoes = container.querySelectorAll('.opcao-item');
            
            opcoes.forEach((opcao, index) => {
                const radio = opcao.querySelector('input[type="radio"]');
                const label = opcao.querySelector('.opcao-label');
                const input = opcao.querySelector('.opcao-input');
                const letra = String.fromCharCode(65 + index);
                
                radio.value = index;
                label.textContent = `${letra})`;
                input.placeholder = `Op√ß√£o ${letra}`;
            });
        }

        function previewQuestao() {
            const enunciado = document.getElementById('enunciado').value;
            const area = document.getElementById('area').value;
            const nivelDificuldade = document.getElementById('nivelDificuldade').value;
            const respostaCorreta = document.querySelector('input[name="respostaCorreta"]:checked');
            
            if (!enunciado || !area || !respostaCorreta) {
                alert('Por favor, preencha todos os campos obrigat√≥rios antes de visualizar.');
                return;
            }
            
            const opcoes = [];
            const opcoesInputs = document.querySelectorAll('.opcao-input');
            opcoesInputs.forEach((input, index) => {
                if (input.value.trim()) {
                    opcoes.push({
                        letra: String.fromCharCode(65 + index),
                        texto: input.value.trim(),
                        correta: index === parseInt(respostaCorreta.value)
                    });
                }
            });
            
            const previewHTML = `
                <div class="preview-enunciado">
                    <strong>${area} - ${nivelDificuldade.charAt(0).toUpperCase() + nivelDificuldade.slice(1)}</strong><br><br>
                    ${enunciado}
                </div>
                <ul class="preview-opcoes">
                    ${opcoes.map(opcao => `
                        <li class="${opcao.correta ? 'correta' : ''}">
                            ${opcao.letra}) ${opcao.texto} ${opcao.correta ? '‚úì' : ''}
                        </li>
                    `).join('')}
                </ul>
            `;
            
            document.getElementById('preview-questao').innerHTML = previewHTML;
            document.getElementById('preview-section').style.display = 'block';
        }

        // Enviar formul√°rio
        document.getElementById('nova-questao-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const enunciado = document.getElementById('enunciado').value;
            const area = document.getElementById('area').value;
            const nivelDificuldade = document.getElementById('nivelDificuldade').value;
            const respostaCorreta = document.querySelector('input[name="respostaCorreta"]:checked');
            
            if (!respostaCorreta) {
                alert('Por favor, marque a resposta correta.');
                return;
            }
            
            const opcoes = [];
            const opcoesInputs = document.querySelectorAll('.opcao-input');
            opcoesInputs.forEach(input => {
                if (input.value.trim()) {
                    opcoes.push(input.value.trim());
                }
            });
            
            if (opcoes.length < 2) {
                alert('√â necess√°rio ter pelo menos 2 op√ß√µes de resposta.');
                return;
            }
            
            const data = {
                enunciado,
                opcoes: JSON.stringify(opcoes),
                respostaCorreta: parseInt(respostaCorreta.value),
                area,
                nivelDificuldade
            };
            
            try {
                const response = await fetch('/api/questoes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Quest√£o criada com sucesso!');
                    window.location.href = '/questoes';
                } else {
                    alert('Erro ao criar quest√£o: ' + result.message);
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro ao criar quest√£o. Tente novamente.');
            }
        });
    </script>
</body>
</html>
