        function imprimirProva() {
            try {
                const actions = document.querySelector('.actions-section');
                const pageHeader = document.querySelector('.page-header');
                const siteHeader = document.querySelector('.header');
                if (actions) actions.style.display = 'none';
                if (pageHeader) pageHeader.style.display = 'none';
                if (siteHeader) siteHeader.style.display = 'none';

                // Esconder estiliza√ß√£o da correta para prova (sem gabarito)
                document.querySelectorAll('.opcao.correta').forEach(opcao => {
                    opcao.style.background = 'white';
                    opcao.style.borderColor = '#e1e5e9';
                    opcao.style.fontWeight = 'normal';
                });
                document.querySelectorAll('.opcao').forEach(opcao => {
                    const texto = opcao.innerHTML;
                    opcao.innerHTML = texto.replace(' ‚úì', '');
                });

                const qrEl = document.getElementById('qr-prova');
                const qrContainer = qrEl ? qrEl.parentElement : null;
                if (qrContainer) {
                    qrContainer.style.border = '3px solid #007bff';
                    qrContainer.style.background = '#f8f9fa';
                }

                window.print();

                // Restaurar ap√≥s impress√£o
                setTimeout(() => {
                    if (actions) actions.style.display = 'block';
                    if (pageHeader) pageHeader.style.display = 'flex';
                    if (siteHeader) siteHeader.style.display = 'block';

                    document.querySelectorAll('.opcao.correta').forEach(opcao => {
                        opcao.style.background = '#d4edda';
                        opcao.style.borderColor = '#c3e6cb';
                        opcao.style.fontWeight = '600';
                    });
                    document.querySelectorAll('.opcao').forEach(opcao => {
                        if (opcao.classList.contains('correta')) {
                            const texto = opcao.innerHTML;
                            if (!texto.includes('‚úì')) {
                                opcao.innerHTML = texto + ' ‚úì';
                            }
                        }
                    });
                    if (qrContainer) {
                        qrContainer.style.border = '2px solid #e1e5e9';
                        qrContainer.style.background = '#f8f9fa';
                    }
                }, 500);
            } catch (e) {
                console.error('Falha ao preparar impress√£o:', e);
                window.print();
            }
        }

        function imprimirProvaComGabarito() {
            try {
                const actions = document.querySelector('.actions-section');
                const pageHeader = document.querySelector('.page-header');
                const siteHeader = document.querySelector('.header');
                if (actions) actions.style.display = 'none';
                if (pageHeader) pageHeader.style.display = 'none';
                if (siteHeader) siteHeader.style.display = 'none';

                const qrEl = document.getElementById('qr-prova');
                const qrContainer = qrEl ? qrEl.parentElement : null;
                if (qrContainer) {
                    qrContainer.style.border = '3px solid #ffc107';
                    qrContainer.style.background = '#fff3cd';
                }

                const gabaritoHeader = document.createElement('div');
                gabaritoHeader.innerHTML = `
                <div style="background: #fff3cd; border: 2px solid #ffeaa7; padding: 15px; margin-bottom: 20px; border-radius: 8px;">
                    <h3 style="margin: 0; color: #856404;">üìã GABARITO - <%= prova.titulo %></h3>
                    <p style="margin: 5px 0 0 0; color: #856404; font-weight: 600;">
                        Disciplina: <%= prova.disciplina %> | Turma: <%= prova.turma_nome %>
                    </p>
                </div>
            `;
                const provaContainer = document.querySelector('.prova-container');
                const headerRef = document.querySelector('.prova-header') || provaContainer.firstChild;
                if (provaContainer) provaContainer.insertBefore(gabaritoHeader, headerRef);

                window.print();

                setTimeout(() => {
                    if (actions) actions.style.display = 'block';
                    if (pageHeader) pageHeader.style.display = 'flex';
                    if (siteHeader) siteHeader.style.display = 'block';
                    if (gabaritoHeader.parentNode) gabaritoHeader.parentNode.removeChild(gabaritoHeader);
                    if (qrContainer) {
                        qrContainer.style.border = '2px solid #e1e5e9';
                        qrContainer.style.background = '#f8f9fa';
                    }
                }, 500);
            } catch (e) {
                console.error('Falha ao imprimir com gabarito:', e);
                window.print();
            }
        }

        // Estilo para impress√£o
        window.addEventListener('beforeprint', function() {
            // Adicionar estilos espec√≠ficos para impress√£o
            const style = document.createElement('style');
            style.innerHTML = `
                @media print {
                    body { margin: 0; padding: 20px; }
                    .prova-container { box-shadow: none; border: 1px solid #ccc; }
                    .questao { page-break-inside: avoid; margin-bottom: 20px; }
                    .qr-code { max-width: 80px; max-height: 80px; }
                }
            `;
            document.head.appendChild(style);
        });

        window.addEventListener('afterprint', function() {
            // Remover estilos de impress√£o
            const styles = document.querySelectorAll('style');
            styles.forEach(style => {
                if (style.innerHTML.includes('@media print')) {
                    style.remove();
                }
            });
        });
    </script>
