                    questoes: questoesArr,
                    totalQuestoes: questoesArr.length,
                    professor: '<%= professor.nome %>',
                    data: new Date().toISOString()
                };
                
                // Criar URL simples do gabarito
                const urlGabarito = `${window.location.origin}/qr-gabarito/<%= prova.id %>`;
                
                console.log('URL Gabarito:', urlGabarito);
                console.log('ID da Prova:', '<%= prova.id %>');
                
                const response = await fetch('/api/gerar-qr', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        data: urlGabarito
                    })
                });
                
                console.log('Response status:', response.status);
                const result = await response.json();
                console.log('Result:', result);
                
                if (result.success) {
                    document.getElementById('qr-prova').innerHTML = 
                        `<img src="${result.qrCode}" alt="QR Code da Prova" style="max-width: 220px; max-height: 220px; border-radius: 8px;">`;
                    console.log('QR Code gerado com sucesso');
                } else {
                    console.error('Erro na resposta:', result.message);
                    document.getElementById('qr-prova').innerHTML = 
                        `<div style="color: red; text-align: center;">Erro ao gerar QR Code</div>`;
                }
            } catch (error) {
                console.error('Erro ao gerar QR code da prova:', error);
                document.getElementById('qr-prova').innerHTML = 
                    `<div style="color: red; text-align: center;">Erro: ${error.message}</div>`;
            }
