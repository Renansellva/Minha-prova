                const questoesArr = questoesData.map((q, index) => ({
                    id: q.id,
                    numero: index + 1,
                    enunciado: q.enunciado,
                    corretaIndex: (typeof q.resposta_correta === 'number' ? q.resposta_correta : null)
                }));

                // Criar dados √∫nicos da prova
                const dadosProva = {
