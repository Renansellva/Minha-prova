        // Fun√ß√£o para embaralhar quest√µes
        function embaralharQuestoes(questoes) {
            return questoes.map(questao => {
                const opcoes = [...questao.opcoes];
                // Embaralhar array de op√ß√µes
                for (let i = opcoes.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [opcoes[i], opcoes[j]] = [opcoes[j], opcoes[i]];
                }
                return {
                    ...questao,
                    opcoes: opcoes
                };
            });
        }

        // Fun√ß√£o para salvar como prova completa
        async function salvarComoProvaCompleta() {
            // Coletar dados do cabe√ßalho
            const nomeTemplate = document.getElementById('nome').value;
            const escolaNome = document.getElementById('escola_nome').value;
            const logoFile = document.getElementById('logo').files[0];
            
            // Coletar campos personalizados
            const campos = {};
            document.querySelectorAll('.campo-item').forEach(campo => {
                const label = campo.querySelector('.campo-label').textContent.replace(':', '');
                const value = campo.querySelector('.campo-input').value;
                if (label && value) {
                    campos[label] = value;
                }
            });
            
            // Coletar quest√µes
            const questoes = [];
            document.querySelectorAll('.questao-item').forEach((questaoItem, index) => {
                const enunciado = questaoItem.querySelector('textarea').value;
                const opcoes = [];
                
                questaoItem.querySelectorAll('.opcao-item').forEach(opcaoItem => {
                    const texto = opcaoItem.querySelector('input').value;
                    if (texto) {
                        opcoes.push(texto);
                    }
                });
                
                // Obter alternativa correta
                const selectCorreta = questaoItem.querySelector('.select-correta');
                const alternativaCorreta = selectCorreta ? selectCorreta.value : '';
                
                if (enunciado && opcoes.length >= 2 && alternativaCorreta) {
                    questoes.push({
                        enunciado: enunciado,
                        opcoes: opcoes,
                        respostaCorreta: alternativaCorreta
                    });
                }
            });
            
            // Validar dados
            if (!nomeTemplate || !escolaNome) {
                alert('Por favor, preencha o nome do template e o nome da escola!');
                return;
            }
            
            if (questoes.length === 0) {
                alert('Por favor, adicione pelo menos uma quest√£o!');
                return;
            }
            
            // Verificar se todas as quest√µes t√™m alternativa correta
            const questoesSemResposta = questoes.filter(q => !q.respostaCorreta);
            if (questoesSemResposta.length > 0) {
                alert('Por favor, selecione a alternativa correta para todas as quest√µes!');
                return;
            }
            
            try {
                // Primeiro, salvar o template de cabe√ßalho
                const templateData = new FormData();
                templateData.append('nome', nomeTemplate);
                templateData.append('escola_nome', escolaNome);
                templateData.append('campos_personalizados', JSON.stringify(campos));
                
                if (logoFile) {
                    templateData.append('logo', logoFile);
                }
                
                const templateResponse = await fetch('/api/templates-cabecalho', {
                    method: 'POST',
                    body: templateData
                });
                
                const templateResult = await templateResponse.json();
                
                if (!templateResult.success) {
                    alert('Erro ao salvar template: ' + templateResult.message);
                    return;
                }
                
                // Agora, criar as quest√µes no banco de dados
                const questoesIds = [];
                for (const questao of questoes) {
                    // Converter resposta correta para √≠ndice (A=0, B=1, C=2, D=3)
                    const letras = ['A', 'B', 'C', 'D', 'E', 'F'];
                    const respostaIndex = letras.indexOf(questao.respostaCorreta);
                    
                    const questaoData = {
                        enunciado: questao.enunciado,
                        opcoes: JSON.stringify(questao.opcoes),
                        respostaCorreta: respostaIndex,
                        area: 'Geral',
                        nivelDificuldade: 'medio',
                        professorId: null // Ser√° definido no servidor
                    };
                    
                    const questaoResponse = await fetch('/api/questoes', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(questaoData)
                    });
                    
                    // Verificar se a resposta √© JSON antes de fazer parse
                    const contentTypeQuestao = questaoResponse.headers.get('content-type');
                    if (contentTypeQuestao && contentTypeQuestao.includes('application/json')) {
                        const questaoResult = await questaoResponse.json();
                        if (questaoResult.success) {
                            questoesIds.push(questaoResult.questaoId);
                        }
                    } else {
                        const errorText = await questaoResponse.text();
                        console.error('Erro ao criar quest√£o - Resposta n√£o √© JSON:', errorText);
                        throw new Error('Erro ao criar quest√£o: resposta inv√°lida do servidor');
                    }
                }
                
                // Finalmente, criar a prova completa
                // Usar FormData porque a rota espera multer (upload de imagem)
                const formData = new FormData();
                formData.append('titulo', nomeTemplate);
                formData.append('disciplina', 'Prova Completa');
                formData.append('descricao', '');
                formData.append('tempoLimite', '90');
                formData.append('turma_nome', 'Geral');
                formData.append('textoPersonalizado', `Cabe√ßalho personalizado: ${escolaNome}`);
                formData.append('questoesIds', JSON.stringify(questoesIds));
                
                const provaResponse = await fetch('/api/provas', {
                    method: 'POST',
                    // N√ÉO definir Content-Type manualmente - o navegador faz isso automaticamente para FormData
                    body: formData
                });
                
                // Verificar se a resposta √© JSON antes de fazer parse
                const contentType = provaResponse.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const errorText = await provaResponse.text();
                    console.error('Erro ao salvar prova - Resposta n√£o √© JSON:', errorText);
                    console.error('Status da resposta:', provaResponse.status);
                    console.error('URL da requisi√ß√£o:', provaResponse.url);
                    throw new Error(`Erro ao salvar prova: servidor retornou HTML em vez de JSON (Status: ${provaResponse.status}). Verifique o console para mais detalhes.`);
                }
                
                const provaResult = await provaResponse.json();
                
                if (provaResult && provaResult.success) {
                    alert('‚úÖ Prova completa salva com sucesso!\n\nüìã Template de cabe√ßalho salvo\n‚ùì Quest√µes criadas\nüìù Prova completa criada\n\nAgora voc√™ pode acessar em "Provas" para visualizar e gerar para alunos.');
                    window.location.href = '/provas';
                } else {
                    alert('Erro ao criar prova: ' + (provaResult?.message || 'Erro desconhecido'));
                }
                
            } catch (error) {
                console.error('Erro ao salvar prova completa:', error);
                alert('Erro ao salvar prova completa. Tente novamente.');
            }
        }

